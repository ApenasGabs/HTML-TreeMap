{
  "name": "html-tree-view",
  "version": "0.1.0",
  "description": "A React component to visualize HTML structures as a tree",
  "type": "module",
  "main": "./dist/html-tree-view.umd.js",
  "module": "./dist/html-tree-view.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/html-tree-view.es.js",
      "require": "./dist/html-tree-view.umd.js",
      "default": "./dist/html-tree-view.es.js"
    }
  },
  "keywords": [
    "react",
    "html",
    "tree",
    "visualization",
    "parser"
  ],
  "author": "Gabriel Rodrigues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apenasgabs/html-tree-view"
  },
  "private": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build --mode lib",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "npm run build:lib",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "jsdom": "^21.1.1",
    "playwright": "^1.32.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.0",
    "vitest": "^0.30.1"
  }
}
